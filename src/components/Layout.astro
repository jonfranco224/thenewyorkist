---
import '../styles/globals.css'
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.astro'
import TipPopup from './popups/Tip.svelte'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='google-adsense-account'
      content='ca-pub-2655846022144054'
    />
    <title>The New Yorkist</title>

    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap'
      rel='stylesheet'
    />

    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />

    <!-- Google tag (gtag.js) -->
    <script
      async
      src='https://www.googletagmanager.com/gtag/js?id=G-3KFGYR32R1'
    ></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-3KFGYR32R1')
    </script>

    <script
      id='usercentrics-cmp'
      src='https://app.usercentrics.eu/browser-ui/latest/loader.js'
      data-settings-id='euME9MqlzPn4Ea'
      async></script>
  </head>

  <body class='bg-[#F8F7F3] m-0 p-4 w-full h-full'>
    <Nav />
    <slot />
    <Footer />
    <TipPopup client:load />
  </body>
</html>
