---
import Layout from "../components/Layout.astro";
import { formatReadableDate } from '../lib/date'
import Terms from '../content/terms.md'
---
<Layout>
  <main class="py-8 max-w-[70ch] m-auto">

    <h1>Terms of Use</h1>
    <div class="mb-8 mt-0">
      <em>Last Updated: {formatReadableDate(new Date().toDateString())}</em>
    </div>
    
    <Terms />
</main>
</Layout>

<style is:global>
  p {
    margin: 1rem 0;
    font-size: 1rem;
  }
</style>